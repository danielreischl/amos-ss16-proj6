set -ue

# setuser: Never run as root!
# authbind: Allows non-root processes to bind to privileged ports (80)
# --path: Make the web application available under a specific URL path
#   The $CONTEXT_PATH environment variable has to be specific when starting a
#   container (e.g. docker run ... -e CONTEXT_PATH=/ ... <image>)

exec /sbin/setuser www-data \
  authbind --deep \
    java -jar /usr/share/java/jetty-runner.jar \
    --port 80 \
    --path $CONTEXT_PATH \
    /web-service-assets/web-service.war
